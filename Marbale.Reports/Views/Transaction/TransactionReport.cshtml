@{
    Layout = null;
}
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<style>
.reportControl {
    width:30%;
    height:180px;
    float:left;
}
.posSelection {
     width:70%;
    height:180px
}
</style>
<div class="transactionReport">
    <div class="transactionHeader">
        <div class="reportControl">
            <div><h3>Transaction Report</h3></div>
            <label>For User:</label>
            <select style="height: 31px;  width: 200px;">
                <option value="0">Select</option>
            </select>
             <button class="btn btn-primary btn-md" role="button">Refresh</button>
             <button class="btn btn-primary btn-md" role="button">Print Priview</button>
             <button class="btn btn-primary btn-md" role="button">Print</button>
             <button class="btn btn-primary btn-md" role="button">Excel</button>
             <button class="btn btn-primary btn-md" role="button">Close</button>
        </div>
        <div class="posSelection">
            <div><b>POS Selection</b></div>
        </div>

    </div>
    <div class="transactionContent">
        <h4 id="dateTimePeriod"></h4>
    </div>
</div>
<script>
    $(document).ready( function(){
        $('#dateTimePeriod').html('Period from ' + getParameterByName('fromDate')+' '+ getParameterByName('fromTime') + ' to To date ' + getParameterByName('toDate')+' '+ getParameterByName('toTime'));
    });
    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, '\\$&');
        var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }
</script>