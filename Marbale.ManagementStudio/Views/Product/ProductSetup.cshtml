@{
    ViewBag.Title = "ProductSetup";
    Layout =  "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
        .webGrid { margin: 4px; border-collapse: collapse; width: 500px;  background-color:#FCFCFC;}
        .header { background-color: #598ab9; font-weight: bold; color: #FFF; }
        .webGrid th, .webGrid td { border: 1px solid #C0C0C0; padding: 5px; }
        .alt { background-color: #E4E9F5; color: #000; }
        .gridHead a:hover {text-decoration:underline;}
        .description { width:auto}
        .select{background-color: #389DF5}
    .marbleGrid {
        overflow-x:scroll;
        overflow-y:hidden;
        width:1050px;
    }
    </style>
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>


@{
    Marbale.BusinessObject.ProductObject product = new Marbale.BusinessObject.ProductObject();
}
@{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 10,
        selectionFieldName: "selectedRow", ajaxUpdateContainerId: "productGrid");
        grid.Pager(WebGridPagerModes.NextPrevious);
}
        <div id="productGrid" class="marbleGrid">
            <a href="#" class="add">Add New Product</a>
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                htmlAttributes: new { id = "grid" },
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                
                grid.Column("Id", "Id"),
                grid.Column("Name", " Name"),
                grid.Column("Type", "Type"),
                grid.Column("POSCounter","POSCounter"),
                grid.Column("Active", format: @<text><input name="chkbox" type="checkbox"@(item.Active ? "checked='checked'" : "") value="Active" /></text>),
                grid.Column("DisplayInPOS", format: @<text><input name="chkbox" type="checkbox"@(item.DisplayInPOS ? "checked='checked'" : "") value="DisplayInPOS" /></text>),
                grid.Column("DisplayGroup", "DisplayGroup"),
                grid.Column("Category" ,"Category"),
                grid.Column("LastUpdatedUser", "LastUpdatedUser"),
                grid.Column("AutoGenerateCardNumber",format: @<text><input name="chkbox" type="checkbox"@(item.AutoGenerateCardNumber ? "checked='checked'" : "") value="AutoGenerateCardNumber" /></text>),
                grid.Column("OnlyVIP",format: @<text><input name="chkbox" type="checkbox"@(item.OnlyVIP ? "checked='checked'" : "") value="OnlyVIP" /></text>),
                grid.Column("Price", "Price"),
                grid.Column("FaceValue", " FaceValue"),
                grid.Column("TaxInclusive", format: @<text><input name="chkbox" type="checkbox"@(item.TaxInclusive ? "checked='checked'" : "") value="TaxInclusive" /></text>),
                grid.Column("TaxPercentage","TaxPercentage"),
                grid.Column("FinalPrice", "FinalPrice"),
                grid.Column("FaceValue", " FaceValue"),
                grid.Column("EffectivePrice","EffectivePrice"),           
                grid.Column(header: "Action", format: @<text> 
                <a href="#" id="Edit_@product.Id"" class="edit">Edit</a>
                <a href="#" id="Update_@product.Id"" style="display:none" class="update">Update</a>
                <a href="#" id="Cancel_@product.Id" style="display:none"  class="cancel">Cancel</a></text>)

         )) 
    </div>   
