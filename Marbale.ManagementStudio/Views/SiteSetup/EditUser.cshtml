@model Marbale.BusinessObject.SiteSetup.User

@{
    ViewBag.Title = "User";
    Layout = null;
}

@using (Html.BeginForm("AddOrEditUser", "SiteSetup", FormMethod.Post))
{
    <div id="editpopup">
        <form>
            <div id="productclass" style="border: 2px solid black; border-color: cornsilk">
                <div class="form-group row">
                    <div class="col-xs-2">
                        <label for="ex1"><b>Id:</b></label>
                        @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly", @class = "form-control" })
                    </div>
                    <div class="col-xs-3">
                        <label for="ex2"><b>Name:</b></label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = @Html.DisplayNameFor(n => n.Name) })
                    </div>

                     <div class="col-xs-3">
                        <label for="ex2"><b>LoginId:</b></label>
                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", placeholder = @Html.DisplayNameFor(n => n.LoginId) })
                    </div>

                    <div class="col-xs-3">
                        <label for="ex2"><b>Email:</b></label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(n => n.Email) })
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-xs-2">
                        <label for="ex3"><b>Manager:</b></label>
                        @Html.TextBoxFor(m => m.Manager, new { @class = "form-control" })
                    </div>
                     <div class="col-xs-2">
                        <label for="ex3"><b>Department:</b></label>
                        @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
                    </div>
                   
                    <div class="col-xs-3">
                        <label for="ex3">Status:</label>
                        <select name="categoryList" id="categoryList" class="form-control" style="height: 35px">
                            @foreach (var status in Model.Statuses)
                            {
                                <option value="@status.Value">@status.Value</option>
                            }
                        </select>
                    </div>
                     <div class="col-xs-3">
                        <label for="ex4">Company Admin</label>
                        @Html.CheckBoxFor(m => m.CompanyAdmin, new { @class = "form-control", @style = "position:absolute;width:20px;" })
                    </div>
                </div>
            </div>
            <div class="pricediv" style="border: 2px solid black; border-color: cornsilk">
                <div class="form-group row">
                     <div class="col-xs-3">
                        <label for="ex3">Role:</label>
                        <select name="Roles" id="Roles" class="form-control" style="height: 35px">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.Value">@role.Value</option>
                            }
                        </select>
                    </div>

                    <div class="col-xs-3">
                        <label for="ex4">POS Counter:</label>
                        @Html.TextBoxFor(m => m.POSCounter, new { @class = "form-control" })
                    </div>
                    <div class="col-xs-3">
                        <label for="ex4">Invalid Attempts</label>
                        @Html.LabelFor(m => m.InvalidAttempts, new { @class = "form-control" })
                    </div>
                   
                </div>
            </div>
            <b style="color: cadetblue">Date Time</b>
            <div class="Entitlement" style="border: 2px solid black; border-color: cornsilk">
                <div class="form-group row">
                    
                    <div class="col-xs-2">
                        <label for="ex4">Employment Start Date:</label>
                        @Html.TextBoxFor(m => m.EmpStartDate, new { @class = "form-control" })
                    </div>

                    <div class="col-xs-2">
                        <label for="ex4">Employment End Date:</label>
                        @Html.TextBoxFor(m => m.EmpEndDate, new { @class = "form-control" })
                    </div>
                    <div class="col-xs-2">
                        <label for="ex4">Employment End Reason:</label>
                        @Html.TextBoxFor(m => m.EmpEndReason, new { @class = "form-control" })
                    </div>

                    <div class="col-xs-2">
                        <label for="ex3"><b>LastLoginTime:</b></label>
                        @Html.LabelFor(m => m.LastLoginTime, new { @class = "form-control" })

                    </div>
                    <div class="col-xs-2">
                        <label for="ex1">LastLogoutTime:</label>
                        @Html.LabelFor(m => m.LastLogoutTime, new { @class = "form-control" })
                    </div>
                   
                </div>
            </div>
            <div class="Miscellaneousclass" style="border: 2px solid black; border-color: cornsilk">
                <div class="form-group row">
                    <div class="col-xs-3">
                        <label for="ex2">CreatedBy:</label>
                        @Html.TextBoxFor(m => m.CreatedBy, new { @class = "form-control" })
                    </div>
                    <div class="col-xs-3">
                        <label for="ex2">CreationDate:</label>
                        @Html.LabelFor(m => m.CreationDate, new { @class = "form-control" })
                    </div>
                    <div class="col-xs-3">
                        <label for="ex4">LastUpdatedDate:</label>
                        @Html.LabelFor(m => m.LastUpdatedDate, new { @class = "form-control" })
                    </div>
                </div>
            </div>

        </form>

        <input type="submit" name="submit" value="Save" class="btn btn-primary btn-md" />
    </div>
}

<style>
    .checkboxs {
        position: absolute;
        width: 20px;
    }
</style>
