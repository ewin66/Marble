<!DOCTYPE html>
<html>
<head>
    <title>Marbale Dashboard</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="~/content/css/bootstrap.css">

    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/content/css/style.css">
    <link rel="stylesheet" href="~/content/css/layout.css">



  
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/JS/bootstrap.min.js"></script>

    <script src="~/Content/JS/popper.min.js"></script>
    <script defer src="~/content/JS/fontawesome.solid.js"></script>
    <script defer src="~/content/JS/fontawesome.js"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

       <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Marbale Dashboard</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Product</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="/product">Products</a>
                        </li>
                        <li>
                            <a href="/discount" id="disc">Discounts</a>
                        </li>
                        <li>
                            <a href="/Tax/Index">Tax</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Site Setup</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a href="/SiteSetup/configuration" id="config">Configaration</a>
                        </li>
                        <li>                        
                            <a href="/SiteSetup/users" id="users">Users</a>
                        </li>
                        <li>
                            <a href="/SiteSetup/userRoles" id="userRole">User Roles</a>
                        </li>
						<li>
                            <a href="/SiteSetup/Messages">Messages</a>
                        </li>
                        <li>
                            <a href="/TaskType/TaskType/TaskType">Task-Type</a>
                        </li>
                    </ul>
                </li>
                     <li>
                    <a href="#pageSubmenucards" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Cards</a>
                    <ul class="collapse list-unstyled" id="pageSubmenucards">
                        <li>
                            <a href="/Cards/ViewCards" id="viewcard">View Card</a>
                        </li>
                        <li>                        
                            <a id="newcards">New Cards</a>
                        </li>
                        <li>
                            <a  id="inventery">Inventory</a>
                        </li>
						
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            @*<li class="nav-item active">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>*@
                        </ul>
                    </div>
                </div>
            </nav>

           <div id="pageContent">
               @RenderBody()
           </div>
        </div>
    </div>
    <div>
        <div class="modal fade" id="newcardmodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" data-backdrop="false"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
    <div class="modal-content" style="width: 900px;height: 810px;" id="newproductmodel">
                <div class="modal-header" style="background-color: blueviolet">
                    <h5 class="modal-title" id="newupdatecardmodal" style="text-align:center">Add Card</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modelbody"></div></div></div></div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
          
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');              
            });
        });
        $('#inventery').click(function () {
            $(".modal-body").html("");
            $('#newcardmodel .modal-content').css('height', 590);
            $('#newcardmodel .modal-content').css('width', 719);
            $('#newupdatecardmodal').text("Inventory").addClass('modal-centre');
            $('#newcardmodel').modal('show');

            $('#modelbody').load('/Cards/Inventory');
        });
        $('#newcards').click(function () {
            $(".modal-body").html("");
            $('#newcardmodel .modal-content').css('height', 810);
            $('#newcardmodel .modal-content').css('width', 900);
            $('#newupdatecardmodal').text("Add Card").addClass('modal-centre');
            $('#newcardmodel').modal('show');
            $('#modelbody').load('Cards/Cards');
        });
    </script>

</body>
</html>
<style>
    .modal-centre {
        position: absolute;
    right: 430px;
    }
</style>
